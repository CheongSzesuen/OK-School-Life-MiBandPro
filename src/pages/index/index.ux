  margin-top: 20px;
  margin-bottom: 40px;
}

/* 游戏名称样式 */
.GameName {
  font-size: 38px; /* 适当减小字体大小 */
  text-align: center;
  color: #ffffff; 
  font-weight: bold;
  letter-spacing: 1px; /* 减小字间距 */
