  word-wrap: break-word;
  white-space: normal;
}

.loading-text {
  font-size: 24px;
  color: #aaaaaa;
  animation: blink 1.5s infinite;
  margin-top: 30px;
}

/* 闪烁动画 */
@keyframes blink {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}
</style>